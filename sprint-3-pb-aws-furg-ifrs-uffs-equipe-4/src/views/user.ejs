<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" href="/img/faviconV2.png" type="image/x-icon" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/css/usuario.css" />
    <title>Resultado da Busca</title>
  </head>
  <body>
    <%- include('breadcrumb', { breadcrumb: breadcrumbData }) -%>
      <ul class="resultados">
        <div class="coluna-resultado">
          <img src= <%= user.avatar %></img>
        </div>
        <% if(user.nome != null){ %>
          <h2 class="coluna-resultado"><strong>Nome:</strong> <%= user.nome %></h2>
        <% } else { %>
          <h2 class="coluna-resultado"><strong>Nome:</strong> <%= user.login %></h2>
        <% } %>
        <h2 class="coluna-resultado"><strong>Github:</strong> <a target ="_blank" href= <%= user.link %> > <%= user.link %> </a></h2>
        <h2 class="coluna-resultado"><strong>Criação da conta:</strong> <%= user.created_at %></h2> 
        <h2 class="coluna-resultado"><strong>Seguidores:</strong> <%= user.followers %></h2>
      </ul>

      <ul class="repos">
        <h2 class="repos-resultado"><strong>Repositórios:</strong></h2>
        <% reposUser.forEach(function(repo) { %>
        <li class="coluna-resultado">
          <h2><%= repo.name %></h2>
          <p><strong>Dono:</strong> <%= repo.owner %></p>
          <p><strong>Descrição:</strong> <%= repo.description %></p>
          <p><strong>Estrelas:</strong> <%= repo.stars %></p>
          <p><strong>Url: </strong> <a href= <%= repo.url %> ><%= repo.url %></a></p>
        </li>
        <% }); %>
      </ul>
    </div>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
